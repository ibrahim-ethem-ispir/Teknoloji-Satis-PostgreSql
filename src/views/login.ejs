<!DOCTYPE html>
<html lang="tr">
    <%-include("./inc/head")%>
<body>
    <div>
        <%-include("./inc/header")%>
    </div>
    <div class="container">

        <div class="float-start randomImages w-50">
            <img src="https://source.unsplash.com/random/1920x1080" alt="">
        </div>  

        <div class="formCenter float-end w-50">
            
            
            <p class="fs-2 fw-bold text-center loginHosGeldin">Ho≈ü Geldiniz</p>
            
            <form action="/login" method="post">
                <div class="w-75">
                    <% if (locals.validationError != undefined || locals.successMessage != undefined) { %>
                        <%- include("./partials/_message") %> 
                    <% } %>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label w-75">Email address</label>
                  <input type="email" name="email" id="email" class="form-control w-75">
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label  w-75">Password</label>
                  <input type="password" class="form-control w-75" name="password" id="password">
                </div>
                <div class="row">
                    <div class="col-9 text-center">
                        <button type="submit" class="btn btn-outline-light">Submit</button>
                    </div>
                </div>
                    
              </form>
              <div class="loginLink">
                <a class="link-light" href="/forget-password">Forget Password ( I Forget My Password )</a> <br>
                <a class="link-light ms-5" href="/register">Register ( Create Account )</a>
            </div>
        </div>
    </div>
    <div>
        <%- include("./inc/footer") %> 
    </div>
</body>
</html>