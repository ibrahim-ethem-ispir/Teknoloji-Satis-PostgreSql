<!DOCTYPE html>
<html lang="tr">
    <%-include("./inc/head")%>
<body>
    <div>
        <%-include("./inc/header")%>
    </div>
    <div class="container">

        <div class="float-start randomImages w-50">
            <img src="https://source.unsplash.com/random/1920x1080" alt="">
        </div>  

        <div class="formCenter float-end w-50">
            
            
            <p class="fs-2 fw-bold text-center loginHosGeldin">Ho≈ü Geldiniz</p>
            
            <form action="/login" method="post">
                <div class="w-75">
                    <% if (locals.validationError != undefined || locals.successMessage != undefined || locals.loginError != undefined) { %>
                        <%- include("./partials/_message") %> 
                    <% } %>
                </div>

                <div class="form-floating mb-3 w-75">
                    <input type="email" class="form-control" id="email" value="<%= typeof email != "undefined" ? email: "" %>" name="email" placeholder="name@example.com">
                    <label for="email">Email address</label>
                </div>

                <div class="form-floating w-75 mb-4">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    <label for="password">Password</label>
                </div>
                <div class="row">
                    <div class="col-9 text-center">
                        <button type="submit" class="btn btn-outline-light">Submit</button>
                    </div>
                </div>
                    
              </form>
              <div class="loginLink">
                <a class="link-light" href="/forget-password">Forget Password ( I Forget My Password )</a> <br>
                <a class="link-light ms-5" href="/register">Register ( Create Account )</a>
            </div>
        </div>
    </div>
    <div>
        <%- include("./inc/footer") %> 
    </div>
</body>
</html>