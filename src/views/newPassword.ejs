<!DOCTYPE html>
<html lang="tr">
    <%-include("./inc/head")%>
<body>
    <div>
        <%-include("./inc/header")%>
    </div>
    <div class="container">

        <div class="float-start randomImages w-50">
            <img src="https://source.unsplash.com/random/1920x1080" alt="">
        </div>  

        <div class="formCenter float-end w-50">
            <div class="w-75 mt-5 mx-auto">
                <% if (locals.validationError != undefined || locals.successMessage != undefined || locals.loginError != undefined) { %>
                    <%-include("./partials/_message") %>
                    <% } %>
            </div>
            
            <p class="fs-2 fw-bold text-center loginHosGeldin">Yeni Şifre Oluşturun</p>
            <form action="/reset-password" method="post">
                <input type="hidden" name="id" value="<%= typeof id != "undefined" ? id:"" %>">
                <input type="hidden" name="token" value="<%= typeof token != "undefined" ? token:"" %>">

                <label class="form-label" for="password">Yeni Şifre</label><br>
                <input class="form-control float-start w-75" value="<%= typeof password != 'undefined' ? password : '' %>" name="password" type="password" id="password"> <br><br><br>

                <label class="form-label" for="passwordAgain">Yeni Şifre Tekrar</label><br>
                <input class="form-control float-start w-75" name="passwordAgain" type="password"  value="<%= typeof passwordAgain != 'undefined' ? passwordAgain : ''%>" id="passwordAgain"> <br><br><br>

                <div class="row">
                    <div class="col-9 text-center">
                        <button class="btn btn-outline-light">Sıfırla</button>
                    </div>
                </div>
            </form>
            <div class="registerLink mt-4">
                <a class="link-light" href="/register">Create a Account</a> <br>
                <a class="link-light" href="/login">Login</a>
            </div>
            </div>
        </div>
    </div>
    <div>
        <%-include("./inc/footer")  %> 
    </div>
</body>
</html>